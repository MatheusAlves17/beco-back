// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  cpf String
  phone String
  email String
  password String
  picture String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("users")
  address Address[]
  card Card[]

}

model Address {
  id String @id @default(uuid())
  zipCode String
  street String
  number String
  district String
  city String
  state String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("address")

  user User @relation(fields: [user_id], references: [id])
  user_id String
}

model Card {
  id String @id @default(uuid())
  number String 
  cvv String
  validity String
  name String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("card")
  user User @relation(fields: [user_id], references: [id])
  user_id String
}